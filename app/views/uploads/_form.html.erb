<div class="loginSignup">
<%= form_for @upload, html: { multipart: true } do |f| %>
  <% if @upload.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@upload.errors.count, "error") %> prohibited this upload from being saved:</h2>

      <ul>
      <% @upload.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="field"> 
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control', id: 'desc'%>
  </div>
  <div class="field">
     <%= f.label :image %><br>
     <%= f.file_field :image, class: 'chooseFile' %>
  </div>
  <div class="actions">
    <%= f.submit "Upload", id: 'uploadImg', class: 'button hoverAnimation' %>
  </div>
<% end %>
</div>